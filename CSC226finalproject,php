$stmt->execute([$uid]);
$user = $stmt->fetch() ?: ['age'=>0,'height'=>0,'weight'=>0,'goal'=>'maintain'];

$stmt = $conn->prepare("SELECT log_date,weight_kg FROM progress_logs WHERE user_id = ? ORDER BY log_date");
$stmt->execute([$uid]);
$progress = $stmt->fetchAll();

